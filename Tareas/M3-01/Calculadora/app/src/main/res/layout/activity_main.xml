<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txv_solution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="32dp"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:layout_above="@id/txv_resultado"
        />
    
    <TextView
        android:id="@+id/txv_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:layout_above="@id/buttons_layout"
        />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:paddingVertical="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_AC"
                android:text="AC"
                android:textSize="22dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_porc"
                android:text="%"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#3C2E2E"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sqr"
                android:text="xÂ²"
                android:textSize="25dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#3C2E2E"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_div"
                android:text="/"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_siete"
                android:text="7"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ocho"
                android:text="8"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_nueve"
                android:text="9"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_mult"
                android:text="*"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cuatro"
                android:text="4"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cinco"
                android:text="5"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_seis"
                android:text="6"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_resta"
                android:text="-"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_uno"
                android:text="1"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dos"
                android:text="2"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tres"
                android:text="3"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_suma"
                android:text="+"
                android:textSize="40dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cero"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="."
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_igual"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="166dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/orange"
                android:text="="
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>