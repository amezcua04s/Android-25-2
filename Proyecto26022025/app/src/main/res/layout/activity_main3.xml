<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C3121111"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:gravity="end"
        android:textSize="40sp"
        android:background="@color/white"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="#180F13"
                >
                <TextView
                    android:id="@+id/Siete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:text="7"
                    android:gravity="end"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />
                <TextView
                    android:id="@+id/Ocho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:text="8"
                    android:gravity="center_vertical"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />
                <TextView
                    android:id="@+id/Nueve"
                    android:layout_width="wrap_content"
                    android:padding="30dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:gravity="end"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#180F13"
                >

                <TextView
                    android:id="@+id/Cuatro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:text="4"
                    android:gravity="end"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />
                <TextView
                    android:id="@+id/Cinco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:text="5"
                    android:gravity="center_vertical"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />
                <TextView
                    android:id="@+id/Seis"
                    android:layout_width="wrap_content"
                    android:padding="30dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:gravity="end"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#180F13"
                >

                <TextView
                    android:id="@+id/Uno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:text="1"
                    android:gravity="end"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />
                <TextView
                    android:id="@+id/Dos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:text="2"
                    android:gravity="center_vertical"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />
                <TextView
                    android:id="@+id/Tres"
                    android:layout_width="wrap_content"
                    android:padding="30dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:gravity="end"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#180F13"
                >


                <TextView
                    android:id="@+id/Cero"
                    android:layout_width="wrap_content"
                    android:padding="30dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:background="@color/white"
                    />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/Mas"
                android:layout_width="wrap_content"
                android:padding="30dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:gravity="end"
                android:textSize="20sp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/Menos"
                android:layout_width="match_parent"
                android:padding="30dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:gravity="end"
                android:textSize="20sp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/Division"
                android:layout_width="match_parent"
                android:padding="30dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:gravity="end"
                android:textSize="20sp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/Multipliacion"
                android:layout_width="match_parent"
                android:padding="30dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:gravity="end"
                android:textSize="20sp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/Igual"
                android:layout_width="match_parent"
                android:padding="30dp"
                android:layout_height="wrap_content"
                android:text="="
                android:gravity="end"
                android:textSize="20sp"
                android:background="@color/white" />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>